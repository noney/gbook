{
    "title" : "gbook",
    "language" : "zh-hans",
    "plugins": ["theme-api",
                "-sharing",
                "-search",
                "-lunr",
                "search-plus",
                "splitter",
                "expandable-chapters-small",

                "-highlight",
                "prism",
                "prism-themes",

                "anchor-navigation-ex"
                
               ],
    "pluginsConfig": {
        "anchor-navigation-ex": {
            "showLevel": true,
            "associatedWithSummary": true,
            "mode": "float", 
            "float": {
                "showLevelIcon": false,
                "level1Icon": "fa fa-hand-o-right",
                "level2Icon": "fa fa-hand-o-right",
                "level3Icon": "fa fa-hand-o-right"
            },
            "pageTop": {
                "showLevelIcon": false,
                "level1Icon": "fa fa-hand-o-right",
                "level2Icon": "fa fa-hand-o-right",
                "level3Icon": "fa fa-hand-o-right"
                }
        },
        "theme-api": {
            "theme": "dark"
        }

    }
}